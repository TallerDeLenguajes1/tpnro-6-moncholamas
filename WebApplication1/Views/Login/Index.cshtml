@model Cadeteria.VIewModels.LoginViewModel
@section Styles
{
    <link href="~/css/login.css" rel="stylesheet" />
}
<h1>Ingreso</h1>
<div class="login-page">
    
        <form asp-action="Ingresar" asp-controller="login" method="post" asp-antiforgery="true" class="was-validated">
          
              
               <div class="form-group">
                    <label asp-for="Nombre">Nombre de Usuario:</label>
                    <input asp-for="Nombre" type="text" id="nombre" placeholder="Nombre" />
                    <span asp-validation-for="Nombre"></span>
               </div>
               <div class="form-group">
                   <label asp-for="Clave">Clave: </label>
                   <input asp-for="Clave" type="password" id="clave" placeholder="Clave" />
                   <span asp-validation-for="Clave"></span>
               </div>
          
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Ingresar</button>
                <a asp-action="" asp-controller="Usuario" class="btn btn-dark">Crear una cuenta </a>
            </div>
            </form>
</div>



@section Scripts
{
    <script src="~/js/login.js" asp-append-version="true"></script>
}
