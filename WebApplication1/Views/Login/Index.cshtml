@model Cadeteria.VIewModels.LoginViewModel
@section Styles
{
    <link href="~/css/login.css" rel="stylesheet" />
}

<div class="login-page">
    <div class="form">
        <form asp-action="Ingresar" asp-controller="login" method="post" asp-antiforgery="true">
            <span>Ingreso</span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="nombre" type="text" id ="nombre" placeholder="Nombre" />
                <input asp-for="clave" type="password" id="clave" placeholder="Clave" />
            </div>
            <div class="form-group">
                <button type="submit">Ingresar</button>
            </div>
        </form>
    </div>

</div>



